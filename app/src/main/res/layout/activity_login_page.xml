<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="22dp"
                android:layout_gravity="bottom|center"
                android:gravity="bottom|center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/app_logo"
                    android:layout_marginBottom="66dp"
                    android:layout_height="244dp"
                    android:contentDescription="@string/todo"></ImageView>
                    <co.ceryle.segmentedbutton.SegmentedButtonGroup
                        android:layout_width="wrap_content"
                        android:layout_margin="11dp"
                        app:sbg_animateSelector="bounce"
                        app:sbg_animateSelectorDuration="1000"
                        app:sbg_backgroundColor="@android:color/white"
                        app:sbg_borderColor="@color/colorAccent"
                        app:sbg_borderSize="2dp"
                        android:id="@+id/segmentedButtonGroup"
                        app:sbg_selectorColor="@color/colorAccent"
                        app:sbg_position="0"
                        app:sbg_enabled="true"
                        app:sbg_rippleColor="@color/colorPrimaryDark"
                        app:sbg_radius="33dp"
                        app:sb_textColor_onSelection="@android:color/white"
                        app:sbg_ripple="true"
                        android:layout_height="wrap_content">
                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:layout_width="wrap_content"
                            app:sb_text="ADMIN"
                            app:sb_textSize="20sp"
                            app:sb_textColor_onSelection="@android:color/white"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:id="@+id/btn_admin"
                            android:paddingLeft="11dp"
                            android:paddingRight="11dp"
                            app:sb_textColor="@color/text_color"
                            android:layout_height="wrap_content"></co.ceryle.segmentedbutton.SegmentedButton>
                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:layout_width="wrap_content"
                            app:sb_text="TUTOR"
                            app:sb_textSize="20sp"
                            android:id="@+id/btn_tutor"
                            app:sb_textColor_onSelection="@android:color/white"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:paddingLeft="11dp"
                            android:paddingRight="11dp"
                            app:sb_textColor="@color/text_color"
                            android:layout_height="wrap_content"></co.ceryle.segmentedbutton.SegmentedButton>
                    </co.ceryle.segmentedbutton.SegmentedButtonGroup>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:id="@+id/txt_emaill"
                    android:layout_margin="11dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_email"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:textColor="@color/text_color"
                        android:background="@drawable/desc_field_selector"
                        android:hint="@string/email"
                        android:inputType="textPersonName"
                        android:padding="11dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_passwordl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    app:errorEnabled="true"
                    app:counterMaxLength="15"
                    app:passwordToggleContentDescription="show"
                    app:passwordToggleDrawable="@android:drawable/ic_lock_idle_lock"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/desc_field_selector"
                        android:gravity="bottom"
                        android:textColor="@color/text_color"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="11dp" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/login"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="88dp"
                    android:fontFamily="serif-monospace"
                    android:paddingRight="88dp"
                    android:background="@drawable/button_background"
                    android:textSize="22sp"
                    android:padding="10dp"
                    android:id="@+id/login_button"
                    android:onClick="login_button"
                    android:textStyle="bold"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"></TextView>



            </LinearLayout></LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>