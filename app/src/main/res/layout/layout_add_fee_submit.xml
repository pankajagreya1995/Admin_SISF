<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="11dp"
        app:cardElevation="11dp"
        app:strokeColor="@color/black_overlay"
        app:strokeWidth="0.5dp"
        app:cardCornerRadius="11dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_acca"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/border_text_title"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Subject"
                    android:padding="11dp"
                    android:layout_weight="1.5"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"></TextView>

                <Spinner
                    android:id="@+id/sp_subject_acca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:entries="@array/subject_list"
                    android:layoutMode="opticalBounds"
                    android:spinnerMode="dialog"></Spinner>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Fee Details"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="11dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"></TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_margin="11dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/desc_field_selector"
                    android:hint="Total Amount"
                    android:inputType="number|none"
                    android:padding="11dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_margin="11dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/desc_field_selector"
                    android:hint="Total Paid"
                    android:inputType="number|none"
                    android:padding="11dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_margin="11dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/desc_field_selector"
                    android:hint="Total Due"
                    android:inputType="number|none"
                    android:padding="11dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_margin="11dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/desc_field_selector"
                    android:hint="Remark"
                    android:inputType="number|none"
                    android:padding="11dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>