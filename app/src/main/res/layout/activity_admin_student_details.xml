            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="11dp"
                app:cardElevation="11dp"
                app:cardCornerRadius="11dp"
                android:layout_height="wrap_content">
